<!doctype html>
<html lang="en">

<head>
	<!-- fontfrom typekit css -->
	<link rel="stylesheet" href="https://use.typekit.net/taq7hkp.css">
	<!-- fonts from google fonts -->
	<link href="https://fonts.googleapis.com/css?family=Courgette|Dr+Sugiyama|Molle:400i|Oswald:700|Sacramento" rel="stylesheet">
	<!-- font awesome -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz"
	 crossorigin="anonymous">
	<!-- general css files -->
	<link rel="stylesheet" href="sass/childpages.css" />
	<link href="https://fonts.googleapis.com/css?family=Teko:300,400,500,600,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">

	<!-- specific css files -->
	<link rel="stylesheet" href="stylesheets/presetStyle.css" />
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
	 crossorigin="anonymous">
	<!-- favicon -->
	<link rel="shortcut icon" type="image/png" href="images/logo.png" />

	<title>PreSet Color Selection</title>
</head>

<body>
	<!-- ejs menu (nav bar navigation) -->
	<% include partials/menu %>
	<!-- background -->
	<div class="bg">
		<div class="triangle-right"></div>
		<div class="triangle-down"></div>
		<!-- Page Content -->
		<div class="container modal-dialo">
			<div class="row">
				<!-- preset color selection title -->
				<div class="title text-center col-12 col-sm-12 col-md-12 col-lg-12">
					<h1>PreSet Color<br /> Selection</h1>
				</div>
			</div>
			<!-- start of form -->
			<div id="presetcolorbox" style="" class="mainbox">
				<div class="panel panel-info">
					<div class="panel-heading">
					</div>
					<div class="panel-body">
						<!-- start of form, that includes a post method to table.js -->
						<form id="presetcolorform" class="form-horizontal" role="form" method="post" action="/table">
							<!-- input boxes to get the color RGB values that are selected, do not display on website -->
							<input type="text" id="redColorInput" name="redInput" value="" style="display: none;" />
							<input type=" text" id="greenColorInput" name="greenInput" value="" style="display: none;" />
							<input type="text" id="blueColorInput" name="blueInput" value="" style="display: none;" />
							<!--start of preset colors -->
							<!-- first set of colors -->
							<div class="row colorRow mx-auto">
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Red</div>
										<button name="redPreset" id="redButton" type="button" class="mx-auto btn-circle btn-xl btn colorCircle red"
										 value="(255,0,0)" style="background-color: #990000;"></button>
									</div>
								</div>
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Green</div>
										<button type="button" value="" class="mx-auto btn-circle btn-xl btn colorCircle green" style="background-color: #008000;"></button>
									</div>
								</div>
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Blue</div>
										<button type="button" value="(0,0,255)" class="mx-auto btn-circle btn-xl btn colorCircle blue" style="background-color: #3399ff;"></button>
									</div>
								</div>
							</div>
							<!-- second set of colors -->
							<div class="row colorRow mx-auto">
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Navy</div>
										<button type="button" value="" class="mx-auto btn-circle btn-xl btn colorCircle navyBlue" style="background-color: #343148;"></button>
									</div>
								</div>
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">White</div>
										<button type="button" value="" class="mx-auto btn-circle btn-xl btn colorCircle white" style="background-color: #ffffff; border: solid thin black"></button>
									</div>
								</div>
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Purple</div>
										<button type="button" class="mx-auto btn-circle btn-xl btn colorCircle purple" style="background-color: #6b5b95;"></button>
									</div>
								</div>
							</div>
							<!-- third set of colors -->
							<div class="row colorRow mx-auto">
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Yellow</div>
										<button type="button" class="mx-auto btn-circle btn-xl btn colorCircle yellow" style="background-color: #f1ea7f;"></button>
									</div>
								</div>
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Pink</div>
										<button type="button" class="mx-auto btn-circle btn-xl btn colorCircle pink" style="background-color: #ce3175;"></button>
									</div>
								</div>
								<div class="text-center col-4 col-sm-4 col-md-4 col-lg-4">
									<div class="colorCircle card">
										<div class="card-title">Cyan</div>
										<button type="button" class="mx-auto btn-circle btn-xl btn colorCircle cyan" style="background-color: #40E0D0;"></button>
									</div>
								</div>
							</div>
							<!-- submit button & table input-->
							<div class="row mx-auto">
								<!-- table input -->
								<div class="col-2 col-sm-2 col-md-2 col-lg-2" style="padding: 0px; margin-top:25px;">
									<h6>Table#</h6>
								</div>
								<div class="col-4 col-sm-4 col-md-4 col-lg-4" style="">
									<input class="tablePinInput" type="text" name="tablePin" value="" style="width: 100%; margin-top:20px;">
								</div>
								<div class="text-center col-5 col-sm-5 col-md-5 col-lg-5" style="">
									<button class="submitButton">
										<h2>Submit</h2>
									</button>
								</div>
								<div class="col-1 col-sm-1 col-md-1 col-lg-1">
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<!-- tooltip button -->
			<button class="toolTipBtn" id="toolTipBtn" data-toggle="modal" data-target="#exampleModalCenter">
				<i class="fas fa-2x fa-question-circle"></i>
			</button>
			<!-- Modal -->
			<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle"
			 aria-hidden="true">
				<div class="modal-dialog modal-dialog-centered" role="document">
					<!-- Modal content -->
					<div class="modal-content">
						<div class="modal-header">
							<h5 class="modal-title" id="exampleModalCenterTitle">How to</h5>
							<button type="button" class="close" data-dismiss="modal" aria-label="Close">
								<span aria-hidden="true">&times;</span>
							</button>
						</div>
						<div class="modal-body">
							<ol type="1">
								<li>Select a color.</li>
								<li>Click the submit button.</li>
							</ol>
						</div>
					</div>
				</div>
			</div>
			<br /><br /><br /><br />
			<!-- /.container -->
			<!-- footer -->
			<% include partials/footer %>
		</div>
		<!-- Optional JavaScript -->
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
		 crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
		 crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
		 crossorigin="anonymous"></script>
		<script>
			// Get the modal
			var modal = document.getElementById('ToolModal');
			// Get the button that opens the modal
			var btn = document.getElementById('toolTipBtn');
			// Get the <span> element that closes the modal
			var span = document.getElementsByClassName("close")[0];

			// When the user clicks the button, open the modal 
			btn.onclick = function () {
				modal.style.display = "block";
			}

			// When the user clicks on <span> (x), close the modal
			span.onclick = function () {
				modal.style.display = "none";
			}

			// When the user clicks anywhere outside of the modal, close it
			window.onclick = function (event) {
				if (event.target == modal) {
					modal.style.display = "none";
				}
			}
			// When the user clicks anywhere outside of the modal, close it


			//getting color value of the button clicked
			$("button").click(function () {
				//if button has the colorCircle class, if not return
				//if button is red
				if ($(this).hasClass("colorCircle") && $(this).hasClass("red")) {
					$("#redColorInput").val(255);
					$("#greenColorInput").val(0);
					$("#blueColorInput").val(0);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				} //if button is green
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("green")) {
					$("#redColorInput").val(0);
					$("#greenColorInput").val(255);
					$("#blueColorInput").val(0);
					//testing
					/* console.log($('#redColorInput').val());
					console.log($('#greenColorInput').val());
					console.log($('#blueColorInput').val()); */
				} //if button is blue 
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("blue")) {
					$("#redColorInput").val(0);
					$("#greenColorInput").val(0);
					$("#blueColorInput").val(255);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				} //if button is navy blue
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("navyBlue")) {
					$("#redColorInput").val(52);
					$("#greenColorInput").val(49);
					$("#blueColorInput").val(72);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				} //if button is white
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("white")) {
					$("#redColorInput").val(255);
					$("#greenColorInput").val(255);
					$("#blueColorInput").val(255);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				} //if button is purple
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("purple")) {
					$("#redColorInput").val(107);
					$("#greenColorInput").val(91);
					$("#blueColorInput").val(149);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				} //if button is yellow
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("yellow")) {
					$("#redColorInput").val(241);
					$("#greenColorInput").val(234);
					$("#blueColorInput").val(127);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				} //if button is pink
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("pink")) {
					$("#redColorInput").val(206);
					$("#greenColorInput").val(49);
					$("#blueColorInput").val(117);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				} //if button is cyan
				else if ($(this).hasClass("colorCircle") && $(this).hasClass("cyan")) {
					$("#redColorInput").val(64);
					$("#greenColorInput").val(224);
					$("#blueColorInput").val(208);
					//testing
					/* 					console.log($('#redColorInput').val());
										console.log($('#greenColorInput').val());
										console.log($('#blueColorInput').val()); */
				}	// if the button has none of those classes return
				else {
					return;
				}
			});

		</script>

</body>

</html>