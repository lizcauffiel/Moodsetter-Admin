<!doctype html>
<html lang="en">

<head>
	<!-- fontfrom typekit css -->
	<link rel="stylesheet" href="https://use.typekit.net/taq7hkp.css">
	<!-- fonts from google fonts -->
	<link href="https://fonts.googleapis.com/css?family=Courgette|Dr+Sugiyama|Molle:400i|Oswald:700|Sacramento" rel="stylesheet">
	<!-- font awesome -->
	<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz"
	 crossorigin="anonymous">
	<!-- general css files -->
	<link rel="stylesheet" href="sass/childpages.css" />
	<link href="https://fonts.googleapis.com/css?family=Teko:300,400,500,600,700" rel="stylesheet">
	<link href="https://fonts.googleapis.com/css?family=Anton" rel="stylesheet">

	<!-- specific css files -->
	<link rel="stylesheet" href="stylesheets/moodStyle.css" />
	<!-- Required meta tags -->
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO"
	 crossorigin="anonymous">
	<!-- favicon -->
	<link rel="shortcut icon" type="image/png" href="images/logo.png" />
	<!-- title -->
	<title>Mood Color Selection</title>
</head>

<body>
	<!-- ejs menu (nav bar navigation) -->
	<% include partials/menu %>
	<!-- background -->
	<div class="bg">
		<div class="triangle-right"></div>
		<div class="triangle-down"></div>
		<!-- Page Content -->
		<div class="container modal-dialo">
			<div class="row">
				<!-- mood color title -->
				<div class="title text-center col-12 col-sm-12 col-md-12 col-lg-12">
					<h1>Mood Color<br /> Selection</h1>
				</div>
			</div>
			<!-- start of form, that includes a post method to table.js -->
			<form id="moodcolorform" class="form-horizontal" role="form" method="post" action="/table">
				<!-- input boxes to get the color RGB values that are selected, do not display on website -->
				<input type="text" id="redColorInput" name="redInput" value="" style="display: none;" />
				<input type=" text" id="greenColorInput" name="greenInput" value="" style="display: none;" />
				<input type="text" id="blueColorInput" name="blueInput" value="" style="display: none;" />
				<!--start of mood colors -->
				<!-- romantic card -->
				<div class="row mx-auto">
					<button type="button" value="(188,36,60)" class="moodColor romantic" style="border: none !important; background: none !important;	width: 100%; padding: 0px;">
						<div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
							<div class="card romantic">
								<div class="card-body">
									<h3 class="card-title">Romantic</h3>
								</div>
							</div>
						</div>
					</button>
				</div>
				<!-- entertaining card -->
				<div class="row mx-auto">
					<button type="button" value="(242,85,44)" class="moodColor entertaining" style="border: none !important; background: none !important;	width: 100%; padding: 0px;">
						<div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
							<div class="card entertaining">
								<div class="card-body">
									<h4 class="card-title">Entertaining</h4>
								</div>
							</div>
						</div>
					</button>
				</div>
				<!-- relaxing card -->
				<div class="row mx-auto">
					<button type="button" value="(79,132,196)" class="moodColor relaxing" style="border: none !important; background: none !important;	width: 100%; padding: 0px;">
						<div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
							<div class="card relaxing">
								<div class="card-body">
									<h5 class="card-title">Relaxing</h5>
								</div>
							</div>
						</div>
					</button>
				</div>
				<!-- Warmth card -->
				<div class="row mx-auto">
					<button type="button" value="(246,209,85)" class="moodColor warmth" style="border: none !important; background: none !important;	width: 100%; padding: 0px;">
						<div class="text-center col-12 col-sm-12 col-md-12 col-lg-12">
							<div class="card warmth">
								<div class="card-body">
									<h5 class="card-title">Warmth</h5>
								</div>
							</div>
						</div>
					</button>
				</div>
				<!-- submit button & table input-->
				<div class="row mx-auto">
					<!-- table input -->
					<div class="col-2 col-sm-2 col-md-2 col-lg-2" style="padding: 0px; margin-top:25px;">
						<h6>Table#</h6>
					</div>
					<div class="col-4 col-sm-4 col-md-4 col-lg-4" style="">
						<input class="tablePinInput" type="text" name="tablePin" value="" style="width: 100%; margin-top:20px;">
					</div>
					<div class="text-center col-5 col-sm-5 col-md-5 col-lg-5" style="">
						<button class="submitButton">
							<h2>Submit</h2>
						</button>
					</div>
					<div class="col-1 col-sm-1 col-md-1 col-lg-1">
					</div>
				</div>
			</form>
			<!-- tooltip button -->
			<button class="toolTipBtn" id="toolTipBtn">
				<i class="fas fa-2x fa-question-circle"></i>
			</button>
			<!-- The Modal -->
			<div id="ToolModal" class="modalToolTip">
				<!-- Modal content -->
				<div class="modal-content">
					<span class="close">&times;</span>
					<ol type="1">
						<li>Pick a color based on your mood.</li>
						<li>Click the submit button.</li>
					</ol>
				</div>
			</div>
			<br /><br /><br /><br />
			<!-- /.container -->
			<!-- footer -->
			<% include partials/footer %>
		</div>
		<!-- Optional JavaScript -->
		<!-- jQuery first, then Popper.js, then Bootstrap JS -->
		<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
		 crossorigin="anonymous"></script>
		<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
		 crossorigin="anonymous"></script>
		<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
		 crossorigin="anonymous"></script>
		<script>
			// Get the modal
			var modal = document.getElementById('ToolModal');
			// Get the button that opens the modal
			var btn = document.getElementById('toolTipBtn');
			// Get the <span> element that closes the modal
			var span = document.getElementsByClassName("close")[0];

			// When the user clicks the button, open the modal 
			btn.onclick = function () {
				modal.style.display = "block";
			}

			// When the user clicks on <span> (x), close the modal
			span.onclick = function () {
				modal.style.display = "none";
			}

			// When the user clicks anywhere outside of the modal, close it
			window.onclick = function (event) {
				if (event.target == modal) {
					modal.style.display = "none";
				}
			}
			// When the user clicks anywhere outside of the modal, close it


			//getting color value of the button clicked
			$("button").click(function () {
				//if button has the colorCircle class, if not return
				//if the button is romantic
				if ($(this).hasClass("moodColor") && $(this).hasClass("romantic")) {
					$("#redColorInput").val(188);
					$("#greenColorInput").val(36);
					$("#blueColorInput").val(60);

					$(".card.romantic").css({ "border": "5px solid rgba(81, 203, 238, 1)", "box-shadow": "(0 0 5px rgba(81, 203, 238, 1))" });
					$(".card.entertaining").css("border", "none");
					$(".card.relaxing").css("border", "none");
					$(".card.warmth").css("border", "none");

					//testing
					//console.log($('#redColorInput').val());
					//console.log($('#greenColorInput').val());
					//console.log($('#blueColorInput').val()); 
				}
				//if the button is entertaining 
				else if ($(this).hasClass("moodColor") && $(this).hasClass("entertaining")) {
					$("#redColorInput").val(242);
					$("#greenColorInput").val(85);
					$("#blueColorInput").val(44);

					$(".card.romantic").css("border", "none");
					$(".card.entertaining").css({ "border": "5px solid rgba(81, 203, 238, 1)", "box-shadow": "(0 0 5px rgba(81, 203, 238, 1))" });
					$(".card.relaxing").css("border", "none");
					$(".card.warmth").css("border", "none");


					//testing
					//console.log($('#redColorInput').val());
					//console.log($('#greenColorInput').val());
					//console.log($('#blueColorInput').val()); 
				} //if the button is relaxing 
				else if ($(this).hasClass("moodColor") && $(this).hasClass("relaxing")) {
					$("#redColorInput").val(79);
					$("#greenColorInput").val(132);
					$("#blueColorInput").val(196);

					$(".card.romantic").css("border", "none");
					$(".card.entertaining").css("border", "none");
					$(".card.relaxing").css({ "border": "5px solid rgba(81, 203, 238, 1)", "box-shadow": "(0 0 5px rgba(81, 203, 238, 1))" });
					$(".card.warmth").css("border", "none");

					//testing
					//console.log($('#redColorInput').val());
					//console.log($('#greenColorInput').val());
					//console.log($('#blueColorInput').val());
				} //if button is warmth
				else if ($(this).hasClass("moodColor") && $(this).hasClass("warmth")) {
					$("#redColorInput").val(246);
					$("#greenColorInput").val(209);
					$("#blueColorInput").val(85);


					$(".card.romantic").css("border", "none");
					$(".card.entertaining").css("border", "none");
					$(".card.relaxing").css("border", "none");
					$(".card.warmth").css({ "border": "5px solid rgba(81, 203, 238, 1)", "box-shadow": "(0 0 5px rgba(81, 203, 238, 1))" });

					//testing
					//console.log($('#redColorInput').val());
					//console.log($('#greenColorInput').val());
					//console.log($('#blueColorInput').val());
				}
				// if the button has none of those classes return
				else {
					return;
				}
			});

		</script>

</body>

</html>